<Window x:Class="Bd2App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bd2App"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" 
        Width="1024" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="541*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="1" Background="#FF657076">
            <StackPanel Margin="0 10 0 0">
                <Button 
                    Click="LoadFile_Click"
                    MinHeight="15" 
                    Width="220"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="10 5 10 15">
                    <Grid Width="140">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="File" VerticalAlignment="Center"/>
                        <Label Grid.Column="1" FontFamily="{materialDesign:MaterialDesignFont}" VerticalAlignment="Center">Abrir Arquivo</Label>
                    </Grid>
                </Button>
                <ComboBox
                    x:Name="HashModeComboBox"
                    Margin="10 0 10 0"
                    SelectedIndex="0"
                    FontSize="16"
                    FontFamily="{materialDesign:MaterialDesignFont}">
                    <ComboBoxItem
                        FontFamily="{materialDesign:MaterialDesignFont}">
                        Quantidade de Páginas
                    </ComboBoxItem>
                    <ComboBoxItem
                        FontFamily="{materialDesign:MaterialDesignFont}">
                        Tamanho da Página
                    </ComboBoxItem>
                </ComboBox>
                <TextBox 
                    PreviewTextInput="Numerical_PreviewTextInput"
                    DataObject.Pasting="Numerical_Pasting"
                    x:Name="PageCounter"
                    Text="1000"
                    FontSize="18"
                    FontFamily="{StaticResource MaterialDesignFont}"
                    Margin="10 0 10 5"/>
                <Label
                    Style="{StaticResource MaterialDesignLabel}"
                    FontFamily="{materialDesign:MaterialDesignFont}"
                    FontSize="16"
                    Foreground="Black"
                    Margin="5 0 5 0"
                    >Numero de Buckets</Label>
                <TextBox
                    PreviewTextInput="Numerical_PreviewTextInput"
                    DataObject.Pasting="Numerical_Pasting"
                    x:Name="BucketCount"
                    Text="75431"
                    FontFamily="{StaticResource MaterialDesignFont}"
                    FontSize="18"
                    Margin="10 0 10 5"
                    />
                <Label
                    Style="{StaticResource MaterialDesignLabel}"
                    FontFamily="{materialDesign:MaterialDesignFont}"
                    FontSize="16"
                    Foreground="Black"
                    Margin="5 5 5 0"
                    >Tamanho dos Buckets</Label>
                <TextBox
                    PreviewTextInput="Numerical_PreviewTextInput"
                    DataObject.Pasting="Numerical_Pasting"
                    x:Name="BucketSize"
                    Text="4"
                    FontFamily="{StaticResource MaterialDesignFont}"
                    FontSize="18"
                    Margin="10 0 10 5"
                    />
                <Separator
                    Margin="10 15 10 0"/>
                <StackPanel
                    x:Name="StatisticsPanel"
                    Visibility="Visible">
                    <Label
                        FontFamily="{materialDesign:MaterialDesignFont}"
                        Margin="10 5 10 0"
                        FontWeight="DemiBold"
                        HorizontalContentAlignment="Center"
                        FontSize="18">
                        Estatísticas
                    </Label>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Label
                            FontFamily="{materialDesign:MaterialDesignFont}"
                            VerticalAlignment="Center"
                            FontSize="16">
                            Colisões:
                        </Label>
                        <Label
                            Grid.Row="1"
                            FontFamily="{materialDesign:MaterialDesignFont}"
                            VerticalAlignment="Center"
                            FontSize="16">
                            Overflow:
                        </Label>
                        <Label
                            Grid.Row="2"
                            FontFamily="{materialDesign:MaterialDesignFont}"
                            VerticalAlignment="Center"
                            FontSize="16">
                            Acessos:
                        </Label>
                        <Label
                            x:Name="CollisionLabel"
                            Grid.Column="1"
                            FontFamily="{materialDesign:MaterialDesignFont}"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Right"
                            FontSize="16">
                            18%
                        </Label>
                        <Label
                            x:Name="OverflowLabel"
                            Grid.Column="1"
                            Grid.Row="1"
                            FontFamily="{materialDesign:MaterialDesignFont}"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Right"
                            FontSize="16">
                            14%
                        </Label>
                        <Label
                            x:Name="AccessLabel"
                            Grid.Column="1"
                            Grid.Row="2"
                            FontFamily="{materialDesign:MaterialDesignFont}"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Right"
                            FontSize="16">
                            2.1
                        </Label>
                        <StackPanel
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <Label
                                HorizontalContentAlignment="Center"
                                FontFamily="{StaticResource MaterialDesignFont}"
                                FontSize="16">Index:</Label>
                            <TextBox
                                x:Name="IndexSearch"
                                Margin="0 0 30 0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Bottom"
                                FontFamily="{StaticResource MaterialDesignFont}"
                                Text=""
                                Width="60"/>
                            <Button
                                Style="{StaticResource MaterialDesignFlatMidBgButton}"
                                Click="SearchClick"
                                Content="Buscar"></Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid
            x:Name="DataGrid"
            Grid.Column="1"
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0"
                HorizontalAlignment="Center">
                <StackPanel
                    Orientation="Horizontal">
                    <Button
                        Click="ToPages_Click"
                        Margin="0 0 20 0"
                        Content="Pages"/>
                    <Button
                        Click="ToBuckets_Click"
                        Content="Buckets"/>
                </StackPanel>
            </Grid>
            <materialDesign:Transitioner
                x:Name="Transitioner" 
                Grid.Row="1"
                Margin="0 0 0 15"
                SelectedIndex="0">
                <DataGrid
                    x:Name="PageDataGrid"
                    IsReadOnly="True"/>
                <DataGrid
                    x:Name="BucketDataGrid"
                    IsReadOnly="True"/>
            </materialDesign:Transitioner>
            <!--<Grid 
                x:Name="PageControls"
                Visibility="Visible"
                Grid.Row="2" 
                HorizontalAlignment="Center">
                <StackPanel
                    Orientation="Horizontal">
                    <Button
                        x:Name="PrevPageButton"
                        Click="PrevPageButton_Click"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}">
                        <fa:ImageAwesome
                            Icon="ArrowLeft"
                            Width="24"
                            Height="24"/>
                    </Button>
                    <Label
                        x:Name="PageLabel"
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        FontFamily="{materialDesign:MaterialDesignFont}"
                        Width="200"
                        FontSize="28">
                        1
                    </Label>
                    <Button
                        x:Name="NextPageButton"
                        Click="NextPageButton_Click"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}">
                        <fa:ImageAwesome
                            Icon="ArrowRight"
                            Width="24"
                            Height="24"/>
                    </Button>
                </StackPanel>
            </Grid>-->
        </Grid>
        <fa:ImageAwesome 
            x:Name="LoadingIcon"
            Visibility="Hidden"
            Icon="Refresh"
            Spin="True"
            Grid.Column="1"
            Grid.Row="1"
            Height="48"
            Width="48"
            Foreground="LightGray"/>
        <ProgressBar
            x:Name="ProgressBar"
            Visibility="Hidden"
            Grid.Column="1"
            Grid.Row="1"
            Width="100" 
            Margin="350 295 350 205"
            Minimum="0"
            Maximum="100"/>
        <Grid 
            Grid.Column="0" 
            ColumnSpan="2" 
            Grid.Row="0" 
            Background="#FF03A9F4"
            MouseDown="TitleBar_MouseDown">
            <Grid.Effect>
                <DropShadowEffect ShadowDepth="2"></DropShadowEffect>
            </Grid.Effect>
            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="10,0">
                <Button
                    x:Name="CloseButton"
                    Click="CloseButton_Click"
                    Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                    Width="25"
                    Height="25"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="Black">
                    <materialDesign:PackIcon 
                        Kind="Close"
                        Width="25"
                        Height="25"/>
                </Button>
            </StackPanel>
        </Grid>
        <Label
            VerticalAlignment="Center"
            FontFamily="{materialDesign:MaterialDesignFont}"
            FontWeight="DemiBold"
            FontSize="28"
            Grid.Column="0"
            Grid.Row="0"
            Margin="5 0 0 0">
            App BD2
        </Label>
    </Grid>
</Window>
